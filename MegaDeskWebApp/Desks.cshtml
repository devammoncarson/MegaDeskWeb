@{
    Layout = "~/_Layout.cshtml";

    Page.Title = "MegaDesk Quotes";
    var db = WebMatrix.Data.Database.Open("MegaDeskDB");
    var selectOrder = @"SELECT dq.DeskQuoteId c.Customer, d.Width, d.Depth, d.NumDrawers, s.DeliverType, sf.SurfaceMaterial
                    FROM DeskQuote dq
                    LEFT JOIN Customer c ON
                        dq.CustomerId = c.CustomerId
                    LEFT JOIN Desk d ON
                        d.Desk = dq.Desk
                    LEFT JOIN Shipping s 0N
                        d.ShippingId = dq.ShippingId
                    LEFT JOIN SurfaceMaterial sf ON
                        sf.SurfaceMaterialid = d.SurfaceMaterialid";


    var selectedData = db.Query(selectOrder);
    var grid = new WebGrid(source: selectedData, defaultSort: "CustomerId", rowsPerPage: 5);
}

<body>
    <h1>My Quotes</h1>
    <form method="get">
        <div>
            <label for="searchCustomerId">Customer Name to look for:</label>
            <input id="searchCustomerId" type="text" name="searchCustomerName" value="@Request.QueryString["searchCustomerId"]" />
            @*<input type="hidden" name="searchKeyword" value=""/>*@
            <input type="Submit" value="Search Customer Name" /><br />
        </div>
    </form>
    <form>
        <input type="submit" name="buttonSubmit" value="Clear Search" />
        <br /><br />
    </form>

    <div>
        @grid.GetHtml(
            tableStyle: "grid",
            headerStyle: "head",
            alternatingRowStyle: "alt",
            columns: grid.Columns(
                grid.Column(format: @<a href="~/EditDesk?id=@item.QuoteId">Edit</a>),
                        @*grid.Column(format:@<strong>@item.Title</strong>),*@
                        grid.Column("CustomerId"),
                        grid.Column("Date"),
                        grid.Column("Total"),
                        grid.Column("Width"),
                        grid.Column("Depth"),
                        grid.Column("NumOfDrawers"),
                        grid.Column("MaterialId"),
                        grid.Column("ShippingId"),
                        grid.Column(format: @<a href="~/DeleteDesk?id=@item.QuoteId">Delete</a>)
                                         )
                                )
    </div>
    <p>
        <a class="navbutton" href="~/addDeskQuote.cshtml">Add a desk</a>
    </p>
</body>